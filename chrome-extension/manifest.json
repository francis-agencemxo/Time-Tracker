{
  "manifest_version": 3,
  "name": "Code Pulse Browsing Tracker",
  "version": "1.7.0.1",
  "description": "A Chrome extension to track browsing activity and manage Code Pulse projects.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "history"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CodePulse Projects"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["toolbar.css"]
    }
  ]
}
