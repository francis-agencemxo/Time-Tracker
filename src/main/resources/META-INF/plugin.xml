<idea-plugin>
    <id>com.mxo.timetracker</id>
    <name>MXO Time Tracker</name>
    <version>1.10.4</version>
    <vendor>MXO</vendor>

    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.phpstorm</depends>

    <idea-version since-build="193.0" until-build="241.*"/>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="MXO Time Tracker"
                    label="MXO Time Tracker"
                    icon="/icons/logo-mxo.svg"
                    anchor="right"
                    factoryClass="com.mxo.timetracker.TimeTrackerToolWindowFactory"
                    canCloseContents="false"/>
        <postStartupActivity implementation="com.mxo.timetracker.TrackingStartupActivity"/>
        <notificationGroup id="MXO Time Tracker"
                           displayType="BALLOON"
                           isLogByDefault="true"/>
        <projectConfigurable instance="com.mxo.timetracker.settings.TimeTrackerSettingsConfigurable"
                             displayName="MXO Time Tracker"/>
    </extensions>
</idea-plugin>
